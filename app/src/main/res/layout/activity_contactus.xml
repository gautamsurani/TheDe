<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.AppBarLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipToPadding="false"
        android:id="@+id/app"
    android:fitsSystemWindows="true"
    android:theme="@style/AppTheme.AppBarOverlay">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar"/>

    </android.support.design.widget.AppBarLayout>
    <RelativeLayout
        android:id="@+id/relontact"
        android:layout_width="match_parent"
        android:gravity="center_horizontal"
        android:layout_below="@+id/app"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/imageView"
            android:scaleType="fitXY"
            android:background="@drawable/help_banner" />

    </RelativeLayout>

    <LinearLayout
        android:layout_below="@+id/relontact"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_margin="18dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:weightSum="10"
            android:gravity="center_vertical"
            android:layout_height="match_parent">


            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/ic_map"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="8.3"
                android:text="India"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@color/material_grey_800"
                android:padding="1dp"
                android:layout_margin="3dp"
                android:id="@+id/tvAddone" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:weightSum="10"
            android:gravity="center_vertical"
            android:layout_height="match_parent">


            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="wrap_content"

                />

            <TextView
                android:layout_width="0dp"
                android:layout_weight="9"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@color/material_grey_800"
                android:text="India"
                android:padding="1dp"
                android:layout_margin="3dp"
                android:id="@+id/tvAddtwo" />


        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:weightSum="10"
            android:gravity="center_vertical"
            android:layout_height="match_parent">


            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="wrap_content"

                />

            <TextView
                android:layout_width="0dp"
                android:layout_weight="9"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@color/material_grey_800"
                android:text="India"
                android:padding="1dp"
                android:layout_margin="3dp"
                android:id="@+id/tvAddthree" />


        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:weightSum="10"
            android:gravity="center_vertical"
            android:layout_height="match_parent">


            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="wrap_content"

                />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="9"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@color/material_grey_800"
                android:padding="1dp"
                android:text="India"
                android:layout_margin="3dp"
                android:id="@+id/tvAddfour" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:weightSum="10"
            android:gravity="center_vertical"
            android:layout_height="match_parent">


            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"

                android:src="@drawable/ic_website"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_weight="8.3"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@color/material_grey_800"
                android:autoLink="web"
                android:padding="2dp"
                android:text="help@phototools.in"
                android:layout_margin="5dp"
                android:id="@+id/tvAddwebsite" />
        </LinearLayout>





        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:weightSum="10"
            android:gravity="center_vertical"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/ic_mobile"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_weight="8.3"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@color/material_grey_800"
                android:padding="2dp"
                android:text="+1234568988"
                android:layout_margin="5dp"
                android:id="@+id/tvAddphone" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:weightSum="10"
            android:gravity="center_vertical"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"

                android:src="@drawable/ic_email"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="8.3"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@color/material_grey_800"
                android:padding="2dp"
                android:layout_margin="5dp"
                android:text="info@phototools.com"
                android:autoLink="email"
                android:id="@+id/tvAddemail" />

        </LinearLayout>

    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <Button
            style="@style/Base.Widget.AppCompat.Button.Colored"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CALL NOW"
            android:layout_alignParentBottom="true"
            android:background="@color/buttoncolor"
            android:textColor="@color/textColorPrimary"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:id="@+id/btnCallnow" />
    </RelativeLayout>

    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:rippleColor="@color/colorPrimary"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_margin="15dp"
        app:fabSize="normal"
        android:id="@+id/contactFAB"
        android:src="@drawable/msg"
        tools:ignore="RelativeOverlap" />
</RelativeLayout>

