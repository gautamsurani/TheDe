<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:layout_marginTop="@dimen/_1sdp"
    android:layout_marginBottom="@dimen/_5sdp"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardElevation="@dimen/_3sdp"
    app:cardUseCompatPadding="true">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:padding="@dimen/_5sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_weight="1.2"
                    android:padding="@dimen/_5sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Kevin"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:textColor="@color/Tex"
                        android:textStyle="bold"
                        android:textSize="@dimen/_14sdp" />

                    <TextView
                        android:id="@+id/desi"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:text="25 Yrs. 5ft/152 Cms"
                        android:textSize="@dimen/_12sdp" />

                    <TextView
                        android:id="@+id/desc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:text="Hindu : Patel"
                        android:textSize="@dimen/_12sdp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_weight="1.8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                   >

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/userMain"
                        android:layout_width="@dimen/_110sdp"
                        android:layout_height="@dimen/_110sdp"
                        android:src="@drawable/man_default"
                        app:civ_border_color="#ccc"
                        app:civ_border_width="2dp" />


                </LinearLayout>
            </LinearLayout>

            <View
                android:background="@color/grey_bg"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_height="1dp"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/_5sdp"
                android:paddingRight="@dimen/_5sdp"
                android:paddingEnd="@dimen/_5sdp"
                android:paddingStart="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp"
                >

                <ImageView
                    android:id="@+id/one"
                    android:src="@drawable/facebook"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:padding="@dimen/_5sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/one"
                    android:layout_toStartOf="@+id/one"
                    android:layout_marginRight="@dimen/_7sdp"
                    android:layout_marginEnd="@dimen/_7sdp"
                    android:padding="@dimen/_5sdp"
                    android:src="@drawable/instagram"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


                <LinearLayout
                    android:id="@+id/min"
                    android:gravity="center"
                    android:layout_centerInParent="true"
                    android:orientation="horizontal"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="@dimen/_2sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:padding="@dimen/_5sdp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:background="@drawable/squre_view"
                    android:layout_width="wrap_content"
                    android:layout_marginRight="@dimen/_7sdp"
                    android:layout_marginEnd="@dimen/_7sdp"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:src="@drawable/mail"
                        android:layout_gravity="center|start"
                        android:layout_width="@dimen/_18sdp"
                        android:layout_height="@dimen/_18sdp" />
                    <TextView
                        android:id="@+id/smail"
                        android:text="Send Email"
                        android:textColor="#000"
                        android:textSize="@dimen/_11sdp"
                        android:maxLines="1"
                        android:gravity="center"
                        android:layout_marginStart="@dimen/_4sdp"
                        android:layout_marginLeft="@dimen/_4sdp"
                        android:ellipsize="end"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <!--<TextView
                    android:id="@+id/smail"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:text="Send Email"
                    android:textColor="#000"
                    android:textSize="@dimen/_11sdp"
                    android:maxLines="1"
                    android:gravity="center"
                    android:layout_centerVertical="true"
                    android:ellipsize="end"

                    android:layout_marginBottom="@dimen/_2sdp"
                    android:drawableLeft="@drawable/bottom"
                    android:drawableStart="@drawable/bottom"
                    android:padding="@dimen/_5sdp"
                    android:background="@drawable/squre_view"
                    android:layout_marginRight="@dimen/_7sdp"
                    android:layout_marginEnd="@dimen/_7sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />-->

                <LinearLayout
                    android:id="@+id/callBTN1"
                    android:layout_centerInParent="true"
                    android:layout_toEndOf="@id/min"
                    android:layout_toRightOf="@+id/min"
                    android:gravity="center"
                    android:layout_centerVertical="true"
                    android:orientation="horizontal"
                    android:layout_marginBottom="@dimen/_2sdp"
                    android:background="@drawable/squre_view"
                    android:layout_width="wrap_content"
                    android:padding="@dimen/_5sdp"
                    android:layout_height="wrap_content"
                    >

                    <ImageView
                        android:src="@drawable/call"
                        android:layout_gravity="center|start"
                        android:layout_width="@dimen/_18sdp"
                        android:layout_height="@dimen/_18sdp" />

                    <TextView
                        android:id="@+id/callBTN"
                        android:text="Call"
                        android:textColor="#000"
                        android:textSize="@dimen/_11sdp"
                        android:maxLines="1"
                        android:layout_marginStart="@dimen/_4sdp"
                        android:layout_marginLeft="@dimen/_4sdp"
                        android:gravity="center"
                        android:ellipsize="end"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

               <!-- <TextView
                    android:id="@+id/callBTN"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:text="Call"
                    android:textColor="#000"
                    android:textSize="@dimen/_11sdp"
                    android:maxLines="1"
                    android:gravity="center"

                    android:layout_centerVertical="true"
                    android:ellipsize="end"
                    android:layout_marginBottom="@dimen/_2sdp"
                    android:drawableLeft="@drawable/bottom"
                    android:drawableStart="@drawable/bottom"
                    android:padding="@dimen/_5sdp"
                    android:background="@drawable/squre_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />-->

            </RelativeLayout>
        </LinearLayout>


    </android.support.v7.widget.CardView>

