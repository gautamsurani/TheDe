<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:facebook="http://schemas.android.com/apk/res-auto"
    android:id="@+id/loginroot"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/head"
                android:layout_width="200dp"
                android:layout_marginTop="140dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:src="@drawable/ic_logo_new" />


            <!--<LinearLayout
                android:id="@+id/fbl"
                android:layout_above="@+id/or"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"


                android:padding="12dp"
                android:gravity="center"
                android:visibility="visible"

                android:elevation="1.5dp"
                >



            </LinearLayout>-->


            <TextView
                android:id="@+id/or"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="or"
                android:visibility="gone"
                android:layout_marginBottom="15dp"
                android:layout_above="@+id/linear"
                android:gravity="center"
                android:lines="1"
                android:textColor="@color/textSub"
                />



            <LinearLayout
                android:layout_above="@+id/tvSignup"
                android:id="@+id/linear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="10dp"
                >

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/email1"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="@color/colorhint"
                    android:textColor="@color/colortext">

                    <EditText
                        android:id="@+id/etOtp"
                        android:textSize="@dimen/menu_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Enter OTP"
                        android:maxLength="4"
                        android:layout_marginLeft="46dp"
                        android:layout_marginRight="46dp"
                        android:textColorHint="@color/textSub"
                        android:textColor="@color/Tex"
                        android:background="#0000"
                        android:padding="10dp"
                        android:inputType="number"
                        android:gravity="left"
                        android:lines="1"
                        android:singleLine="true"
                        android:drawableLeft="@drawable/ic_mobile"
                        android:drawablePadding="12dp" />

                </android.support.design.widget.TextInputLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_marginLeft="56dp"
                    android:layout_marginRight="56dp"
                    android:layout_height="1dp"
                    android:background="@color/red"/>


                <View
                    android:layout_width="match_parent"
                    android:layout_marginLeft="56dp"
                    android:layout_marginRight="56dp"
                    android:layout_height="1dp"
                    android:background="@color/red"/>

                <LinearLayout

                    android:layout_marginTop="12dp"
                    android:id="@+id/linear4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <LinearLayout

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_marginLeft="50dp"
                        >
                        <CheckBox
                            android:id="@+id/checkbocremember"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="false"
                            android:visibility="gone"
                            android:buttonTint="@color/textSub"

                            />
                        <TextView

                            android:id="@+id/remember"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Remember password?"
                            android:visibility="gone"
                            android:textColor="@color/textSub"
                            android:layout_gravity="center"
                            android:textSize="@dimen/textsub"

                            /></LinearLayout>
                    <TextView

                        android:id="@+id/tvResendOtp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Resend OTP?"

                        android:textColor="@color/textSub"
                        android:layout_gravity="center"
                        android:textSize="@dimen/textsub"
                        android:padding="10dp"
                        android:gravity="right"
                        android:layout_marginRight="50dp"

                        />
                </LinearLayout>


            </LinearLayout>

            <TextView
                android:layout_above="@+id/signinline"
                android:id="@+id/tvVerifyOtp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rect1"
                android:text="Verify OTP"
                android:textSize="@dimen/menu_text"
                android:textColor="#fff"
                android:gravity="center"
                android:layout_marginLeft="60dp"
                android:layout_marginRight="60dp"
                android:padding="12dp"
                android:layout_marginTop="6dp"
                android:elevation="1.5dp" />



        </LinearLayout>
    </ScrollView>


</RelativeLayout>



