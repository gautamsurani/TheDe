<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/relofferroot"
        android:layout_width="match_parent"
        android:layout_margin="2dp"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imgrowoffers"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            android:src="@drawable/default_icon" />

        <RelativeLayout
            android:layout_below="@+id/imgrowoffers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp">
            <TextView
                android:id="@+id/tvOffertitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sample Title"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                android:textColor="@color/material_grey_600" />

            <RelativeLayout
                android:id="@+id/offercontent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvOffertitle"
                android:layout_alignParentRight="true"
                android:layout_marginTop="15dp"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/spacing_middle"
                    android:layout_marginRight="@dimen/spacing_middle"
                    android:layout_marginBottom="2dp"

                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@drawable/ic_date"
                        android:tint="@color/material_grey_600" />

                    <TextView
                        android:id="@+id/etaddedOn"
                        android:text="16 Mar 2016"
                        android:textStyle="italic"
                        android:textColor="@color/material_grey_600"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </RelativeLayout>
            <View
                android:layout_below="@+id/offercontent"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#99e2e2e2"></View>

        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>
