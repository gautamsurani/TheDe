<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


    <ImageView
        android:id="@+id/sliderImageView"

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop" />

    <RelativeLayout
        android:id="@+id/tagView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:padding="@dimen/_8sdp">

        <thedezine.android.utils.TagGroup
            android:id="@+id/tagGroupHome"
            style="@style/TagGroup.Large"
            android:layout_centerInParent="true" />

    </RelativeLayout>


    <View
        android:id="@+id/headingSeparator"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/grey_hard"
        android:layout_above="@+id/tagView"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp" />

    <TextView
        android:id="@+id/headingTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/headingSeparator"
        android:layout_alignLeft="@+id/headingSeparator"
        android:textColor="@color/Tex"
        android:textSize="@dimen/_22sdp"
        android:padding="@dimen/_10sdp"
        android:maxLines="2" />

</RelativeLayout>